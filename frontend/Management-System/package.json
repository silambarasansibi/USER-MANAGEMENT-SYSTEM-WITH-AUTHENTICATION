{
  "name": "management-system-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "start": "vite"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bootstrap": "^5.3.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.15.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "vite": "^4.5.0",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.12.0"
  },
  "eslintConfig": {
    "extends": ["react-app", "eslint:recommended", "plugin:react/recommended"],
    "plugins": ["react"],
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "no-unused-vars": "warn",
      "semi": ["error", "always"]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "es5"
  }
}
